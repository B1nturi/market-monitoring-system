<!-- 
    This is of-chain Metrics page for the Market Monitoring System.
    It displays product metrics based on the selected filters.
-->




<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <style>
        html, body {
            height: 100%;
        }
        body {
            display: flex;
            flex-direction: column;
        }
        main {
            flex: 1;
        }
    </style>
</head>
<body>
    <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="/">Market Monitoring System</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="./dashboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/addcompany">Add Company</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/revokeCompany">Revoke Company</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/user/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container mt-5">
  <h1 class="mb-4">Product Metrics</h1>

  <form class="row g-3 mb-4" method="get" action="/admin/productmetrics">
    <div class="col-md-4">
      <input type="text"
             name="productName"
             value="<%= productName || '' %>"
             class="form-control"
             placeholder="Product Name">
    </div>
    <div class="col-md-4">
      <input type="text"
             name="batchNumber"
             value="<%= batchNumber || '' %>"
             class="form-control"
             placeholder="Batch Number">
    </div>
    <div class="col-md-4">
      <button type="submit" class="btn btn-primary">Filter</button>
    </div>
  </form>

  <% if (metrics.length) { %>
    <div class="table-responsive">
      <table class="table table-bordered table-striped">
        <thead class="table-dark">
          <tr>
            <th>Product ID</th>
            <th>Name</th>
            <th>Batch #</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Company</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          <% metrics.forEach(m => { %>
            <tr>
              <td><%= m.productID %></td>
              <td><%= m.productName %></td>
              <td><%= m.batchNumber %></td>
              <td><%= m.sellingPrice %></td>
              <td><%= m.quantityBought %></td>
              <td><%= m.companyName %></td>
              <td><%= new Date(m.createdAt).toLocaleString() %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } else { %>
    <p class="text-muted">No records found.</p>
  <% } %>
</div>
<%- include('partials/footer') %>