<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Consumer Dashboard</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        html, body {
            height: 100%;
            font-family: 'Roboto', sans-serif;
        }

        body {
            display: flex;
            flex-direction: column;
            background: linear-gradient(135deg, #f7f7f7, #eaeaea); /* Neutral gradient background */
        }

        main {
            flex: 1;
        }

        .container {
            max-width: 1200px;
        }

        .complaint-card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1); /* Subtle shadow */
            padding: 1.5rem;
            background-color: #ffffff; /* White background for cards */
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .complaint-card:hover {
            transform: translateY(-5px); /* Lift effect on hover */
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15); /* Stronger shadow on hover */
        }

        .complaint-card-header {
            font-size: 1.25rem;
            font-weight: bold;
            color: #333333; /* Darker text for better readability */
            margin-bottom: 0.5rem;
        }

        .complaint-card-body p {
            margin-bottom: 0.5rem;
            font-size: 0.95rem;
            color: #555555; /* Neutral gray for text */
        }

        .complaint-status {
            text-transform: capitalize;
            font-weight: 600;
        }

        .complaint-status.pending {
            color: #f39c12; /* Orange for pending */
        }

        .complaint-status.resolved {
            color: #27ae60; /* Green for resolved */
        }

        .complaint-status.in-progress {
            color: #8e44ad; /* Purple for in-progress */
        }

        .submit-btn {
            width: 220px;
            font-size: 1.1rem;
            font-weight: 600;
            border-radius: 8px;
            padding: 12px;
            background-color: #27ae60; /* Green button */
            border: none;
            color: white;
            transition: all 0.3s ease;
        }

        .submit-btn:hover {
            background-color: #1e8449; /* Darker green on hover */
            transform: translateY(-2px); /* Lift effect */
        }

        .text-muted {
            font-size: 1rem;
            color: #7f8c8d; /* Softer gray for muted text */
        }

        h1 {
            font-size: 2.5rem;
            font-weight: 700;
            color: #333333; /* Dark gray for the main heading */
        }

        h2 {
            font-size: 1.8rem;
            font-weight: 600;
            color: #555555; /* Neutral gray for section headings */
        }
    </style>
</head>

<body>
    <%- include('partials/header') %>

    <main>
        <div class="container mt-4">
            <h1 class="text-center mb-5">Consumer Dashboard</h1>

            <div class="row">
                <!-- Complaints Section -->
                <div class="col-12">
                    <h2 class="mb-4">My Complaints</h2>
                    <% if (complaints.length > 0) { %>
                        <div class="row">
                            <% complaints.forEach(complaint => { %>
                                <div class="col-md-6 col-lg-4 mb-4">
                                    <div class="complaint-card">
                                        <div class="complaint-card-header">
                                            <%= complaint.title %>
                                        </div>
                                        <div class="complaint-card-body">
                                            <p><strong>Description:</strong> <%= complaint.description %></p>
                                            <p><strong>Company:</strong> <%= complaint.companyId.companyDetails.name %></p>
                                            <p class="complaint-status <%= complaint.status.toLowerCase().replace(' ', '-') %>">
                                                <strong>Status:</strong> <%= complaint.status %>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <p class="text-muted text-center">No complaints available.</p>
                    <% } %>
                </div>
            </div>

            <div class="row justify-content-center mt-4">
                <div class="col-12 text-center">
                    <a href="/consumer/submit-complaint" class="btn submit-btn">Submit Complaint</a>
                </div>
            </div>
        </div>
    </main>

    <%- include('partials/footer') %>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>

</html>
