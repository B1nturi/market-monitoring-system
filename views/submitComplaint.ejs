<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Submit Complaint</title>
    <link rel="stylesheet" href="/path/to/your/css/styles.css">
</head>
<body>
    <%- include('partials/header') %>

    <h1>Submit Complaint</h1>

    <form action="/consumer/submit-complaint" method="POST">
        <div>
            <label for="consumerId">Consumer ID:</label>
            <input type="text" id="consumerId" name="consumerId" value="<%= consumerId %>" readonly>
        </div>
        <div>
            <label for="companyId">Company:</label>
            <select id="companyId" name="companyId" required>
                <% companies.forEach(company => { %>
                    <option value="<%= company.userId %>"><%= company._id %></option>
                <% }); %>
            </select>
        </div>
        <div>
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" required>
        </div>
        <div>
            <label for="description">Description:</label>
            <textarea id="description" name="description" required></textarea>
        </div>
        <button type="submit">Submit Complaint</button>
    </form>

    <%- include('partials/footer') %>
</body>
</html>