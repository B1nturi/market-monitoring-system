<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <style>
        html,
        body {
            height: 100%;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" href="/admin/dashboard">Market Monitoring System</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/addcompany">Add Company</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/revokeCompany">Revoke Company</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/productMetrics">Product Metrics</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/showMetrics">On-Chain Product Metrics</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/user/logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-5">
        <h1 class="text-center mb-4">Admin Dashboard</h1>


        <h2 class="mb-3">Company Details</h2>
        <% if (companies.length> 0) { %>
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>Company Name</th>
                            <th>Email</th>
                            <th>Address</th>
                            <th>Website</th>
                            <th>Wallet</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% companies.forEach(company=> { %>
                            <tr>
                                <td>
                                    <%= company.companyDetails.name %>
                                </td>
                                <td>
                                    <%= company.email %>
                                </td>
                                <td>
                                    <%= company.companyDetails.address %>
                                </td>
                                <td>
                                    <%= company.companyDetails.website %>
                                </td>
                                <td>
                                    <%= company.companyDetails.walletaddress %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
                <div class="mt-3">
                    <a href="/admin/isRegistered" class="btn btn-primary me-2">is Company Registered</a>
                    <a href="/admin/addcompany" class="btn btn-primary me-2">Add Company</a>
                    <a href="/admin/revokeCompany" class="btn btn-danger">Revoke Company</a>
                </div>
            </div>
            <% } else { %>
                <p class="text-muted">No companies available.</p>
                <% } %>


                    <h2 class="mt-5 mb-3">Consumer Complaints</h2>
                    <% if (complaints.length> 0) { %>
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Consumer Name</th>
                                        <th>Consumer Email</th>
                                        <th>Company Name</th>
                                        <th>Complaint</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% complaints.forEach(complaint=> { %>
                                        <tr>
                                            <td>
                                                <%= complaint.consumerId && complaint.consumerId.name ?
                                                    complaint.consumerId.name : 'N/A' %>
                                            </td>
                                            <td>
                                                <%= complaint.consumerId && complaint.consumerId.email ?
                                                    complaint.consumerId.email : 'N/A' %>
                                            </td>
                                            <td>
                                                <%= complaint.companyId && complaint.companyId.companyDetails &&
                                                    complaint.companyId.companyDetails.name ?
                                                    complaint.companyId.companyDetails.name : 'N/A' %>
                                            </td>
                                            <td>
                                                <%= complaint.description %>
                                            </td>
                                            <td>
                                                <form action="/admin/updateComplaintStatus" method="POST">
                                                    <input type="hidden" name="complaintId"
                                                        value="<%= complaint._id %>">
                                                    <select name="status" class="form-select"
                                                        onchange="this.form.submit()">
                                                        <option value="Pending" <%=complaint.status==='Pending'
                                                            ? 'selected' : '' %>>Pending</option>
                                                        <option value="Progressing" <%=complaint.status==='Progressing'
                                                            ? 'selected' : '' %>>Progressing</option>
                                                        <option value="Resolved" <%=complaint.status==='Resolved'
                                                            ? 'selected' : '' %>>Resolved</option>
                                                        <option value="Rejected" <%=complaint.status==='Rejected'
                                                            ? 'selected' : '' %>>Rejected</option>
                                                    </select>
                                                </form>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                        <% } else { %>
                            <p class="text-muted">No complaints available.</p>
                            <% } %>

                                <!-- Blockchain Information Section -->
                                <h2 class="mt-5 mb-3">Blockchain Information</h2>
                                <div class="d-flex flex-wrap gap-2">
                                    <a href="/admin/showblockinfo" class="btn btn-primary mb-3">View Blockchain Info</a>
                                    <!-- <a href="/admin/revokeCompany" class="btn btn-primary mb-3">Revoke Company</a> -->
                                </div>
    </div>
    <%- include('partials/footer') %>
</body>

</html>