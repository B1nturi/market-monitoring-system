<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <style>
        html,
        body {
            height: 100%;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1;
        }
    </style>
</head>

<body>
    <%- include('partials/adminHeader') %>

        <div class="container mt-5">
            <h1 class="text-center mb-4">Admin Dashboard</h1>


            <h2 class="mb-3">Company Details</h2>
            <% if (companies.length> 0) { %>
                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>Company Name</th>
                                <th>Email</th>
                                <th>Address</th>
                                <th>Website</th>
                                <th>Wallet</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% companies.forEach(company=> { %>
                                <tr>
                                    <td>
                                        <%= company.companyDetails.name %>
                                    </td>
                                    <td>
                                        <%= company.email %>
                                    </td>
                                    <td>
                                        <%= company.companyDetails.address %>
                                    </td>
                                    <td>
                                        <%= company.companyDetails.website %>
                                    </td>
                                    <td>
                                        <%= company.companyDetails.walletaddress %>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                    <div class="mt-3">
                        <a href="/admin/isRegistered" class="btn btn-primary me-2">is Company Registered</a>
                        <a href="/admin/addcompany" class="btn btn-primary me-2">Add Company</a>
                        <a href="/admin/revokeCompany" class="btn btn-danger">Revoke Company</a>
                    </div>
                </div>
                <% } else { %>
                    <p class="text-muted">No companies available.</p>
                    <% } %>


                        <h2 class="mt-5 mb-3">Consumer Complaints</h2>
                        <% if (complaints.length> 0) { %>
                            <div class="table-responsive">
                                <table class="table table-bordered table-striped">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Company Name</th>
                                            <th>Complaint</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% complaints.slice(0, 5).forEach(complaint => { %>
                                            <tr>
                                                <td>
                                                    <%= complaint.companyId && complaint.companyId.companyDetails &&
                                                        complaint.companyId.companyDetails.name ?
                                                        complaint.companyId.companyDetails.name : 'N/A' %>
                                                </td>
                                                <td>
                                                    <%= complaint.description %>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                                <div class="d-flex flex-wrap gap-2">
                                    <a href="/admin/complaints" class="btn btn-primary mb-3">View all complaints</a>
                                </div>
                            </div>
                            <% } else { %>
                                <p class="text-muted">No complaints available.</p>
                                <% } %>

                                    <!-- Blockchain Information Section -->
                                    <!-- <h2 class="mt-5 mb-3">Blockchain Information</h2>
                                    <div class="d-flex flex-wrap gap-2">
                                        <a href="/admin/showblockinfo" class="btn btn-primary mb-3">View Blockchain
                                            Info</a>
                                    </div> -->
        </div>
        <%- include('partials/footer') %>
</body>

</html>